{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Réinitialisation{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <img src="{{ asset('imageLogo/logo.jpg') }}">
        </div>
        <div class="col-lg-6">
            <h1>Réinitialisation du mot de passe</h1>*
            {% form_theme resetForm 'bootstrap_4_layout.html.twig' %}
                {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword) }}
                <button class="btn btn-primary">Réinitialisation</button>
                 {{ form_end(resetForm) }}
        </div>
    </div>
</div>
{% endblock %}
