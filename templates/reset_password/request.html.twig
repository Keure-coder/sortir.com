{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Réinitialisation {% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <img src="{{ asset('imageLogo/logo.jpg') }}">
            </div>
            <div class="col-lg-6">
                <h1>Réinitialisation du mot de passe</h1>

                {% form_theme requestForm 'bootstrap_4_layout.html.twig' %}
                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div>
                    <small>
                        Entrez votre adresse e-mail et nous vous enverrons un
                        lien pour réinitialiser votre mot de passe.
                    </small>
                </div><br>
                <button class="btn btn-outline-primary">Réinitialisation</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>

{% endblock %}
