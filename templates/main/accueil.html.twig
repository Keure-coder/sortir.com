{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Accueil{% endblock %}

{% block body %}
    <div class="jumbotron text-right">
        <h4>Date du jour : {{ 'now'| date('d/m/Y') }}</h4>
        <h4>Participant : {{ app.user.prenom | capitalize }} {{ app.user.nom | slice(0,1) | capitalize}}. {% if app.user.administrateur == 1 %}(admin){% endif %}</h4>
    </div>

    <section class="w-50">
        <div class="container" >
            <div class="row">
                <div class="col-lg-6">
                    <form name="filtre" class="name " id="name">
                        <fieldset>
                            <legend>Filtrer les sorties</legend>
                            <label for="campus">Campus</label><select class="form-control" id="campus" name="campus" ></select><br>
                            <label for="debut">Entre</label>&nbsp;<input class="form-control" type="date" name="debut" id="debut">&nbsp;<label for="fin"> et</label>&nbsp;<input
                                    class="form-control"  type="date" name="fin" id="fin"><br>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <button type="button" class="btn btn-primary" >Rechercher</button>
                        </fieldset>
                    </form>
                </div>
                    {% for sortie in sorties %}
                        <div class="col-lg-3">
                                <div class="card">
                                        <img src="{{ asset('uploadImage/' ~ sortie.photo) }}" alt="description">
                                    <div class="card-body">
                                        <div class="card-title"><h3>{{ sortie.nom }}</h3> </div>
                                        <div class="card-text">
                                            <p>Date de début : {{ sortie.dateHeureDebut | date('d/m/Y') }}<br>
                                               Clôture :  {{ sortie.dateLimiteInscription | date('d/m/Y') }}<br>
                                            Places : /{{ sortie.nbInscriptionMax }}<br>
                                            Etat : {#{{ sortie.etat  }}#}<br>
                                            Organisateur : {#{{ sortie.organisateur }}#}</p>
                                            {#{% if app.user.id == sortie.organisateur %}#}
                                                <a href="#" type="btn btn-primary">Modifier</a>
                                           {# {% else %}#}
                                                <a href="#" type="btn btn-primary">Afficher</a>
                                        {#    {% endif %}#}
                                        </div>
                                    </div>
                                </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    <div class="text-center mb-3 mt-3">
        <a style="font-size:20px;" class="btn btn-outline-secondary  w-50" href="{{ path('main_sortie', {'id': app.user.id}) }}">Créer une sortie</a>
    </div>

{% endblock %}
